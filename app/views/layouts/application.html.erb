<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
        <ul class="navbar-nav my-3 mr-auto">
          <li>
            <div class="mx-1">
         <%= link_to("NaganoCake", root_path, class: "btn btn-light") %>
            </div>
          </li>
        </ul>
         <% if admin_signed_in? %>
         <div class="mx-3">
          <%= link_to("商品一覧",  admin_items_path, class: "btn btn-info") %>
         </div>
          <div class="mx-3">
          <%= link_to("会員一覧", admin_customers_path, class: "btn btn-info") %>
         </div>
         <div class="mx-3">
          <%= link_to("注文履歴一覧", admin_path, class: "btn btn-info") %>
         </div>
         <div class="mx-3">
          <%= link_to("ジャンル一覧",  admin_genres_path, class: "btn btn-info") %>
         </div>
         <div class="mx-3">
         <%= link_to("ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-warning") %>
            </div>

         <% elsif customer_signed_in? %>
            <div class="mx-3">
         <%= link_to("マイページ", customers_mypage_path, class:"btn btn-outline-primary") %>
            </div>
            <div class="mx-3">
         <%= link_to("商品一覧", items_path, class: "btn btn-outline-primary") %>
            </div>
            <div class="mx-3">
         <%= link_to "カート", cart_items_path, class: "btn btn-outline-primary" %>
            </div>
            <div class="mx-3">
         <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn btn-outline-warning" %>
            </div>

         <% else %>
              <ul class="navbar-nav">
          <li>
           <div class="mx-3">
            <%= link_to("About", about_path, class: "btn btn-outline-primary") %>
           </div>
          </li>
         <li>
           <div class="mx-3">
           <%= link_to("商品一覧", items_path, class: "btn btn-outline-primary") %>
         </div>
         </li>
         <li>
         <div class="mx-3">
           <%= link_to("新規登録", new_customer_registration_path, class: "btn btn-outline-primary") %>
         </div>
         </li>
         <li>
         <div class="mx-3">
           <%= link_to("ログイン", new_customer_session_path, class: "btn btn-outline-primary") %>
         </div>
         </li>

         <li>
         <div class="mx-3">
           <%= link_to "管理者ログイン",  new_admin_session_path %>
         </div>
         </li>
           </ul>


       <% end %>
    </div>
</nav>
</header>
  <%= yield %>