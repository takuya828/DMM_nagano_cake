<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if admin_signed_in? %>
      <li>
        <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
      </li>
    <% else %>
       <li>
        <%= link_to "TOP", root_path %>
      </li>
      <li>
        <%= link_to "管理者新規登録",  new_admin_registration_path %>
      </li>
      <li>
        <%= link_to "管理者ログイン",  new_admin_session_path %>
      </li>
      <li>
        <%= link_to "会員新規登録", new_customer_registration_path %>
      </li>
      <li>
        <%= link_to "会員ログイン", new_customer_session_path %>
      </li>
      <li>
        <%= link_to "商品新規登録", new_admin_item_path %>
      </li>
      <li>
        <%= link_to "商品一覧",  admin_items_path %>
      </li>
      <li>
        <%= link_to "ジャンル一覧",  admin_genres_path %>
      </li>
      <li>
       <%= link_to "About", about_path %>
      </li>

      <% if customer_signed_in? %>
      <li>
        <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
      </li>
      <% else %>

    <% end %>
    <% end %>
    <%= yield %>
  </body>
</html>
