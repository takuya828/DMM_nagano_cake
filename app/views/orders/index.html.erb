<div class="container">
  <div class="mt-3 mx-3">
    <h3>注文履歴一覧</h3>

    <div class="row">
      <div class="col-md-8">
        <div class="mt-3">

            <table class="table">
  <thead>
    <tr>
      <th scope="col">注文日</th>
      <th scope="col">配送先</th>
      <th scope="col">注文商品</th>
      <th scope="col">支払金額</th>
      <th scope="col">注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @orders.each do |order| %>
      <th scope="row"><%= order.created_at.strftime("%Y-%m-%d") %></th>
      <td>〒<%= order.postal_code %><br><%= order.address %><br><%= order.name %></td>
      <td><% order.order_items.each do |order_item| %><%= order_item.item.name %><br><% end %></td>
      <td><%= (order.price + @postage).to_s(:delimited) %></td>
      <td><%= link_to "表示する", order_path(order), class:"btn btn-info" %></td>
    </tr>
    <% end %>
  </tbody>
</table>