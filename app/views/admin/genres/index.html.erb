<%= flash[:success] %>
<div class="container">
  <div class="mt-3 mx-3">
  <h1>ジャンル一覧・追加</h1>
    <div class="row">
      <div class="col">
        <div class="mt-3">
        <%= form_with model: [:admin, @genre], local:true do |f| %> 　<p>ジャンル名 <%= f.text_field :name %> <%= f.submit '新規登録' %>
        <% end %> </p>
        <table class="table table-borderless">
          <thead>
            <tr>
              <th scope="col">ジャンル</th>
              <th scope="col">　　　</th>
            </tr>
          </thead>
        <tbody>
          <tr>
            <% @genres.each do |genre| %>
            <th scope="row"><%= genre.name %></th>
            <td><%= link_to("編集する", edit_admin_genre_path(@genre, id: genre), class: "btn btn-success") %></td>
          </tr>
            <% end %>
        </tbody>
        </table>
        </div>
      </div>
    </div>
  </div>
</div>