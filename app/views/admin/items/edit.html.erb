<main>
  <div class="container">
    <div class="px-3 mt-3">
      <h4>商品編集</h4>
    </div>
    <div class="mx-5">
      <%= form_with model:@item, url: admin_item_path, local: true do |f| %>
        <p>商品画像　　<%= attachment_image_tag(@item, :image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg") %><%= f.attachment_field :image %></p>
        <p>商品名　　　<%= f.text_field :name, size: "40" %></p>
        <p>商品説明　　<%= f.text_area :introduction, size: "40" %></p>
        <p><%= f.label :ジャンル %>　　<%= f.collection_select :genre_id, Genre.all, :id, :name %></p>
        <p>税抜価格　　<%= f.text_field :price %>円</p><br>
        <%= f.submit '変更を保存', class: "btn btn-outline-success" %>
        <% end %>
    </div>
  </div>
</main>