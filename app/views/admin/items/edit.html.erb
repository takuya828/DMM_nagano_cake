<h4>商品編集</h4>

<%= form_with model:@item, url: admin_item_path, local: true do |f| %>
<h4>商品画像</h4>　<%= attachment_image_tag(@item, :image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg") %><%= f.attachment_field :image %>
<h4>商品名</h4>
  <%= f.text_field :name %>
<h4>商品説明</h4>
  <%= f.text_area :introduction %><br>
  <%= f.label :ジャンル %>
  　　<%= f.collection_select :genre_id, Genre.all, :id, :name %>
<h4>税抜価格</h4>
  <%= f.text_field :price %><br>

  <%= f.submit '変更を保存' %>

  <% end %>