<div class="container">
  <div class="mx-3">
    <div class="row">
      <div class="col">
        <div class="mt-3">
          <h4>商品一覧</h4>
        </div>
        <div class="text-right">
          <%= link_to  new_admin_item_path do %>
          <i class="fas fa-plus-circle fa-2x"></i>
          <% end %>
        </div>
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">商品ID</th>
              <th scope="col">商品名</th>
              <th scope="col">税抜価格</th>
              <th scope="col">ジャンル</th>
            </tr>
          </thead>
        <tbody>
          <tr>
            <% @items.each do |item| %>
            <th scope="row"><%= item.id %></th>
            <td><%= link_to item.name, admin_item_path(item) %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
          </tr>
            <% end %>
        </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
