<div class="container">
  <div class="mt-3 mx-3">
    <h4>会員一覧</h4>
      <div class="row">
        <div class="col">
          <div class="mt-3">
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">会員ID</th>
                <th scope="col">氏名</th>
                <th scope="col">メールアドレス</th>
                <th scope="col">ステータス</th>
              </tr>
            </thead>
          <tbody>
            <tr>
              <% @customers.each do |customer| %>
              <th scope="row"><%= customer.id %></th>
              <td><%= link_to (customer.first_name + customer.last_name), admin_customer_path(customer) %></td>
              <td><%= customer.email %></td>
              <td><%= customer.is_active_i18n %></td>
            </tr>
            <% end %>
          </tbody>
          </table>
          </div>
        </div>
      </div>
  </div>
</div>
