<div class="container">
  <div class="mt-3 mx-3">
<h1><%= @customer.first_name + @customer.last_name %>さんの会員情報編集</h1>

    <div class="row">
      <div class="col">
        <div class="mt-3">


<%= form_with model:@customer, url: admin_customer_path, local: true do |f| %>
  <p>会員ID 　　　　　<%= @customer.id %></p>
  <p>氏名 　　　　　　<%= f.text_field :first_name %>　　　<%= f.text_field :last_name %></p>
  <p>フリガナ 　　　　<%= f.text_field :first_name_kana %>　　　<%= f.text_field :last_name_kana %></p>
  <p>郵便番号 　　　　<%= f.text_field :postal_code %></p>
  <p>住所 　　　　　　<%= f.text_field :address %></p>
  <p>電話番号　　　　 <%= f.text_field :telephone_number %></p>
  <p>メールアドレス　 <%= f.text_field :email %></p>
  <p>会員ステータス 　<%= f.radio_button :is_active, :yuukou, checked: true %>
  <%= f.label :is_active, Customer.is_actives_i18n[:yuukou] %>
  <%= f.radio_button :is_active, :mukou %>
  <%= f.label :is_active, Customer.is_actives_i18n[:mukou]%></p>

　　　　　　　　<%= f.submit '変更を保存', class: "btn btn-success" %>

  <% end %>

  </div>
  </div>
  </div>

