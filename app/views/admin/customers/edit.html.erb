<h3><%= @customer.first_name + @customer.last_name %>さんの会員情報編集</h3>

<%= form_with model:@customer, url: admin_customer_path, local: true do |f| %>
  <h4>会員ID <%= @customer.id %></h4>
  <h4>氏名</h4>
  <%= f.text_field :first_name %>　　<%= f.text_field :last_name %>
  <h4>フリガナ</h4>
  <%= f.text_field :first_name_kana %>　　<%= f.text_field :last_name_kana %>
  <h4>郵便番号</h4>
  <%= f.text_field :postal_code %>
  <h4>住所</h4>
  <%= f.text_field :address %>
  <h4>電話番号</h4>
  <%= f.text_field :telephone_number %>
  <h4>メールアドレス</h4>
  <%= f.text_field :email %><br>
  <h4>会員ステータス</h4>
  <%= f.radio_button :is_active, :yuukou, checked: true %>
  <%= f.label :is_active, Customer.is_actives_i18n[:yuukou] %>
  <%= f.radio_button :is_active, :mukou %>
  <%= f.label :is_active, Customer.is_actives_i18n[:mukou]%>
  <br>

   <%= f.submit '変更を保存' %>

  <% end %>

