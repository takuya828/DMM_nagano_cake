<h1>注文履歴一覧(管理)</h1>
<% @orders.each do |order| %>
    注文日時<%= link_to order.created_at.strftime("%Y-%m-%d%H:%M"), admin_order_path(order) %><br>
    購入者<%= order.customer.first_name + order.customer.last_name %><br>
    <% @sum = 0 %>
    <% order.order_items.each do |order_item| %>
        <% order_item.amount %>
        <% @sum += order_item.amount %>
    <% end %>
    注文個数　　<%= @sum %>
    <br><br>

<% end %>