
<div class="container">
  <div class="mt-3 mx-3">
    <%= flash[:danger] %>
　　<%= flash[:success] %>
    <h3>配送先登録/一覧</h3>

    <div class="row">
      <div class="col">
        <div class="mt-3">

<%= form_with model:@address, local:true do |f| %>

  <p>郵便番号 （ハイフンなし）　　　 <%= f.text_field :postal_code %></p>

  <p>住所 　　　　　　　　　　　　　 <%= f.text_field :address, size: "50" %></p>

  <p>宛名 　　　　　　　　　　　　　 <%= f.text_field :name %>　　　　　　　　　　　　　　<%= f.submit '新規登録', class:"btn btn-primary" %></p>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">郵便番号</th>
      <th scope="col">住所</th>
      <th scope="col">宛名</th>
      <th scope="col">　　　　</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @addresses.each do |address| %>
      <th scope="row"><%= address.postal_code %></th>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td><%= link_to '編集する', edit_address_path(@address, id: address), class:"btn btn-success" %>　　<%= link_to "削除する", address_delete_path(@address, id: address), method: :delete, data: {confirm: "削除しますか？"}, class:"btn btn-danger"  %></td>
    </tr>
    <% end %>
  </tbody>
</table>