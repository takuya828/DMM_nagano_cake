<div class="container">
  <div class="mt-3 mx-3">
    <h3>配送先編集</h3>

    <div class="row">
      <div class="col">
        <div class="mt-3">
<%= form_with model:@address, url:"/addresses/#{@address.id}", local: true do |f| %>
<p>郵便番号（ハイフンなし）　　　　　<%= f.text_field :postal_code %></p>
<p>住所　　　　　　　　　　　　　　　<%= f.text_field :address, size: "50" %></p>
<p>宛名　　　　　　　　　　　　　　　<%= f.text_field :name %>　　　　　　　 　　　　　　　 <%= f.submit '変更内容を保存', class:"btn btn-primary" %></p>

  <% end %>