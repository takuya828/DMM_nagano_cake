<main>
  <div class="container">
    <div class="mx-3 mt-3">
      <h2>管理者ログイン</h2>
    </div>
    <div class="mx-5 mt-2">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 50 %>
  </div>
    <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password", size:50 %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "ログイン", class: "btn btn-outline-success" %>
    </div>
      <% end %>
    </div>
  </div>
</main>