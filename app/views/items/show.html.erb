<main>
  <div class="container">
      <div class="mt-3">
      <h2>商品詳細</h2>
      </div>
   <div class="row">
    <div class="mt-5 mx-3">
<div class="col">
<%= attachment_image_tag(@item, :image, :fill, 300, 200, format: 'jpeg', fallback: "no_image.jpg") %>
</div>
</div>

<div class="mt-5">
<div class="col">
<h2>　<strong><%= @item.name %></strong></h2>
<p>　　<%= @item.introduction %></p>
<p>　　<strong>¥<%= @item.add_tax_price.to_s(:dalimited) %></strong>(税込)</p>
<%= form_with model:@cart_item, url: cart_items_path, local:true do |f| %>
<p>　　<%= f.select :amount, *[1..20], include_blank: "個数選択" %><%= f.hidden_field :item_id, value: @item.id %>　　　<%= f.submit 'カートに入れる', class:"btn btn-primary" %></p>
<% end %>
</div>
</div>
</div>