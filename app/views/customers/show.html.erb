<%= flash[:danger] %>
<%= flash[:success] %>

<div class="container">
  <div class="mt-3 mx-3">
    <h2>マイページ</h2>
      <div class="row">
        <div class="col">
          <div class="mt-3">
            <p><strong>登録情報</strong>　　　<%= link_to "編集する", edit_customer_path(@customer.id), class:"btn btn-success" %></p>
            <table border="1" cellpadding="5">
              <tr>
                <td>氏名</td>
                <td><%= @customer.first_name %>　<%= (@customer.last_name) %></td>
              </tr>
              <tr>
                <td>カナ</td>
                <td><%= @customer.first_name_kana %>　<%= @customer.last_name_kana %></td>
              </tr>
              <tr>
                <td>郵便番号</td>
                <td><%= @customer.postal_code %></td>
              </tr>
              <tr>
                <td>住所</td>
                <td><%= @customer.address %></td>
              </tr>
              <tr>
                <td>電話番号</td>
                <td><%= @customer.telephone_number %></td>
              </tr>
              <tr>
                <td>メールアドレス</td>
                <td><%= @customer.email %></td>
              </tr>
            </table>
          <div class="mt-3">
            <strong>配送先</strong>　　<%= link_to "一覧を見る", addresses_path, class:"btn btn-primary" %><br><br>
            <strong>注文履歴</strong>　<%= link_to "一覧を見る", orders_path, class:"btn btn-primary" %>
          </div>
          </div>
        </div>
      </div>
  </div>
</div>