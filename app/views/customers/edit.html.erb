<div class="container">
  <div class="mt-3 mx-3">
    <h3>会員情報編集</h3>
      <div class="row">
        <div class="col">
          <div class="mt-3">
          <%= form_with model:@customer, url: customers_mypage_path, local: true do |f| %>
          　<p>氏名　　　　　　　　　　<%= f.text_field :first_name %>　　<%= f.text_field :last_name %></p>
            <p>フリガナ　　　　　　　　<%= f.text_field :first_name_kana %>　　<%= f.text_field :last_name_kana %></p>
            <p>郵便番号　　　　　　　　<%= f.text_field :postal_code %></p>
            <p>住所　　　　　　　　　　<%= f.text_field :address, size:"60" %></p>
            <p>電話番号　　　　　　　　<%= f.text_field :telephone_number %></p>
            <p>メールアドレス　　　　　<%= f.text_field :email %></p>
　　　　　　　　　　　　<%= f.submit '編集内容を保存', class:"btn btn-success" %>　　　　　　　<%= link_to '退会する', customers_check_path, class:"btn btn-danger" %>
                        <% end %>